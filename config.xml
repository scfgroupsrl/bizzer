<?xml version="1.0" encoding="utf-8"?>
<widget id="me.bizzer.app" version="1.0.8" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Bizzer</name>
    <description>
        Bizzer
    </description>
    <author email="info@lenus.it" href="http://www.lenusmedia.it">
        Lenus Media
    </author>
    <icon src="logo.png" />
    <platform name="ios">
        <!-- iPhone 6 / 6+ -->
        <icon src="www/data/res/icons/ios/icon-60-3x.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="www/data/res/icons/ios/icon-60.png" platform="ios" width="60" height="60" />
        <icon src="www/data/res/icons/ios/icon-60-2x.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="www/data/res/icons/ios/icon-76.png" platform="ios" width="76" height="76" />
        <icon src="www/data/res/icons/ios/icon-76-2x.png" platform="ios" width="152" height="152" />

        <!-- Settings Icon -->
        <icon src="www/data/res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="www/data/res/icons/ios/icon-small-2x.png" platform="ios" width="58" height="58" />

        <!-- Spotlight Icon -->
        <icon src="www/data/res/icons/ios/icon-40.png" platform="ios" width="40" height="40" />
        <icon src="www/data/res/icons/ios/icon-40-2x.png" platform="ios" width="80" height="80" />

        <!-- iPhone / iPod Touch -->
        <icon src="www/data/res/icons/ios/icon.png" platform="ios" width="57" height="57" />
        <icon src="www/data/res/icons/ios/icon-2x.png" platform="ios" width="114" height="114" />

        <!-- iPad -->
        <icon src="www/data/res/icons/ios/icon-72.png" platform="ios" width="72" height="72" />
        <icon src="www/data/res/icons/ios/icon-72-2x.png" platform="ios" width="144" height="144" />

        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/data/res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="www/data/res/icons/ios/icon-small-2x.png" platform="ios" width="58" height="58" />

        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/data/res/icons/ios/icon-50.png" platform="ios" width="50" height="50" />
        <icon src="www/data/res/icons/ios/icon-50-2x.png" platform="ios" width="100" height="100" />

    </platform>


    <content src="src/main.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <!--<preference name="show-splash-screen-spinner" value="true" />-->
    <preference name="SplashScreen" value="none"/>
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="android-installLocation" value="auto" />
    <gap:plugin name="cordova-plugin-console" source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser" source="npm" />
    <gap:plugin name="cordova-plugin-vibration" source="npm" />
    <gap:plugin name="cordova-plugin-device" source="npm" />
    <gap:plugin name="cordova-plugin-device-motion" source="npm" />
    <gap:plugin name="cordova-plugin-device-orientation" source="npm" />
    <gap:plugin name="cordova-plugin-dialogs" source="npm" />
    <gap:plugin name="cordova-plugin-globalization" source="npm" />
    <gap:plugin name="cordova-plugin-media" source="npm" />
    <gap:plugin name="cordova-plugin-network-information" source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
